# Environment variables for HOSKDOG Faucet
# Copy to .env and fill in your actual values

# Faucet wallet configuration
FAUCET_WALLET_ADDRESS=addr1_your_faucet_wallet_address_here
FAUCET_WALLET_PRIVATE_KEY=your_private_key_here

# Token configuration
HKDG_POLICY_ID=your_hkdg_policy_id_here

# API Keys (if needed)
BLOCKFROST_API_KEY=your_blockfrost_key_if_using_blockfrost

# Springs donation tracking
SPRINGS_DONATION_ADDRESS=addr1_springs_donation_address_here

# Security
JWT_SECRET=your_jwt_secret_for_api_authentication

# Database (if using one)
DATABASE_URL=your_database_connection_string

# Environment
NODE_ENV=development